@model LoginRegistration.Models.User

@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
<div class="col-sm-6">
<form asp-controller="Home" asp-action="Register" method="post">
    <div class="form-group">
        <span asp-validation-for="FirstName"></span>
        <input asp-for="FirstName" class="form-control" placeholder="First Name"/>
    </div>
    <div class="form-group">
        <span asp-validation-for="LastName"></span>
        <input asp-for="LastName" class="form-control" placeholder="Last Name"/>
    </div>
    <div class="form-group">  
        <span asp-validation-for="Email"></span>
        <input asp-for="Email" class="form-control" placeholder="Email"/>
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span>
        <input asp-for="Password" class="form-control" placeholder="Password"/>
    </div>
    <div class="form-group">
        <span asp-validation-for="ConfirmPassword"></span>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
    </div>
    <button type="submit" class="btn btn-default">Register</button>
</form>   
</div>
<div class="col-sm-6">
    <form action="/login" method="post">
        <div class="form-group">  
            <input type="text" name="email" class="form-control" placeholder="Email"/>
        </div>
        <div class="form-group">
            <input type="password" name="password" class="form-control" placeholder="Password"/>
        </div>
        <button type="submit" class="btn btn-default">Register</button>
    </form>
    <div class="loginErrors">
    @{
         //If there are any errors for a field...
        if(@TempData["error"] != null )
        {
            <p>@TempData["error"]</p>
        }
    }
    </div>    
</div>
<div class="col-sm-12">
    <h3>Logged In User</h3>
    @if( ViewBag.User != null )
    {
        <p>@ViewBag.User["first_name"]</p>
    }
    else
    {
        <p>No one logged in</p>
    }
</div>
</div>