@model theWall.Models.Comment

<form asp-controller="Wall" asp-action="Comment" method="post">
    <div class="form-group">
        <span asp-validation-for="CommentContent"></span>
        <input type="hidden" name="messageid" value='@message["id"]' />
        <textarea asp-for="CommentContent" class="form-control" placeholder="Post a Comment"></textarea>
    </div>
    <button type="submit" class="btn btn-default">Message</button>
</form>