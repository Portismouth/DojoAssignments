@using ecommerce.Models
@model Customer

<div class="row">
    <div class="col-sm-6">
        <h3>Add a new customer</h3>
        <form asp-controller="Store" asp-action="NewCustomer" method="post">
            <div class="form-group">
                <span asp-validation-for="name"></span>
                <input asp-for="name" type="text" class="form-control" placeholder="Customer Name">
            </div>
            <button class="btn btn-default">Add</button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <table class="table">
            <thead>
                <tr>
                    <td>Customer Name</td>
                    <td>Created Date</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
            @if (ViewBag.customers != null)
            {
                @foreach (var customer in ViewBag.customers)
                {
                    <tr>
                        <td>@customer.name</td>
                        <td>@customer.createdat.ToString("MM/dd/yyyy")</td>
                        <td><a href="/customers/delete/@customer.customerid" class="btn btn-default">Delete</a></td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>