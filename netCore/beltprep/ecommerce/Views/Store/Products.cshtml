@using ecommerce.Models
@model ProductWrapper

<div class="row">
    <div class="col-sm-2">
        @Html.Partial("SearchPartial")
        <hr>
        <h2>Add a new product</h2>
        <form asp-controller="Store" asp-action="AddProduct" method="post">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="name...">
            </div>
            <div class="form-group">
                <input type="text" name="url" class="form-control" value="http://" >
            </div>
            <div class="form-group">
                <textarea name="desc" class="form-control" placeholder="description"></textarea>
            </div>
            <div class="form-group">
                <label for="quantity">Initial Quantity</label>
                <input type="number" name="quantity" class="form-control">
            </div>
            <button type="submit" class="btn btn-default">Create</button>
        </form>
    </div>
    <div class="col-sm-10">
        @foreach (var product in Model.products)
        {
            <div class="col-sm-4">
                <img style="width: 100%" src="http://www.euneighbours.eu/sites/default/files/2017-01/placeholder.png" alt="sample" />
                <h4>@product.name</h4>
                <h4><em>(@product.quantity left)</em></h4>
            </div>
        }
    </div>
</div>
