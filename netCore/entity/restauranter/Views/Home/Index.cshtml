@using restauranter.Models
@model restauranter.Models.Review

@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-sm-12">
        <form asp-controller="Home" asp-action="Review" method="post">
            <div class="form-group">
                <span asp-validation-for="reviewname"></span>
                <input asp-for="reviewname" class="form-control" placeholder="Your Name">
            </div>
            <div class="form-group">
                <span asp-validation-for="restaurantname"></span>
                <input asp-for="restaurantname" class="form-control" placeholder="The Restaurant">
            </div>
            <div class="form-group">
                <span asp-validation-for="review"></span>
                <textarea asp-for="review" class="form-control" placeholder="Your Review"></textarea>
            </div>
            <div class="form-group col-sm-6">
                <span asp-validation-for="date"></span>
                <label>Date</label>
                <input id="event_date" asp-for="date" type="datepicker" class="form-control">
            </div>
            <div class="form-group col-sm-6">
                <span asp-validation-for="rating"></span>
                <label>Rating</label>
                <select asp-for="rating" class="form-control"> 
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>